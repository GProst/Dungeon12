<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.7.1-build749-beta" />
    <PackageReference Include="SkiaSharp" Version="1.68.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Remove="Views\Base.xaml" />
    <None Remove="Views\Creation\Name.xaml" />
    <None Remove="UserInterface\Button.xaml" />
    <None Remove="Views\Start.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Rogue.Classes\Rogue.Classes.csproj" />
    <ProjectReference Include="..\..\..\Rogue.Resources\Rogue.Resources.csproj" />
    <ProjectReference Include="..\..\..\Rogue.Scenes\Rogue.Scenes.csproj" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="Game.xaml.cs">
      <DependentUpon>Game.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Main.xaml.cs">
      <DependentUpon>Main.xaml</DependentUpon>
    </Compile>
  </ItemGroup>


  <ItemGroup>
    <Folder Include="Transforms\" />
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Update="Views\Base.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\Creation\Name.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\Main.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\Start.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="UserInterface\Button.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>


  <ItemGroup>
    <None Update="Views\Main.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

</Project>
